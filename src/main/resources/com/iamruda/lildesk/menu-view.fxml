         <Label graphicTextGap="6.0" prefHeight="18.0" prefWidth="200.0" text="Li'l Desk" textFill="WHITE" />
         <Button fx:id="button_start" maxWidth="160.0" mnemonicParsing="false" style="-fx-background-color: #222;" text="Запустить" textFill="WHITE" />
     </buttons>
   </ButtonBar>
   <ButtonBar buttonMinWidth="40.0" prefHeight="40.0" prefWidth="200.0">
